<% layout('/layout/boilerPlate') -%>
<body>
    <h3>All Listing</h3>
    <!-- <form action="/listing/new" method="get">
        <button>Create Listing</button>
    </form> -->
    <div class="row row-cols-xl-4 row-cols-lg-3  row-cols-md-2 row-cols-sm-1 card-box offset-0.5 mt-3">
        <%for(let listing of data){%>
            <a href="/listing/<%=listing._id%>" class="listing-link">
                <div class="card col">
                    <img src="<%=listing.img%>" class="card-img-top" alt="img" style="height: 20rem;">
                    <div class="card-img-overlay">
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%=listing.title%></b><br>
                            <%= listing.price.toLocaleString("en-IN") %>
                        </p>
                    </div>
                </div>
            </a>
        <%}%>
    </div>
